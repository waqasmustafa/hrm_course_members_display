<odoo>
    <template id="website_slides_course_sidebar_members_display"
              inherit_id="website_slides.course_sidebar"
              name="Course Sidebar Members 587024 + Attendees">

        <!-- Replace Members TD -->
        <xpath expr="//tr[th[normalize-space()='Members']]/td" position="replace">
            <td>
                <t t-esc="channel.fake_members_display"/>
            </td>
        </xpath>

        <!-- Hide Responsible row completely -->
        <xpath expr="//tr[th[normalize-space()='Responsible']]" position="replace">
            <tr style="display:none;"></tr>
        </xpath>

    </template>
</odoo>
